{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "npx tsx src/lib/db/migrate.ts run",
    "db:rollback": "npx tsx src/lib/db/migrate.ts rollback",
    "db:status": "npx tsx src/lib/db/migrate.ts status",
    "db:create": "npx tsx src/lib/db/migrate.ts create",
    "db:seed": "npx tsx src/lib/auth/seed.ts",
    "generate:icons": "node scripts/generate-icons.js",
    "capacitor:init": "npx cap init Studek com.studek.app --web-dir=out",
    "capacitor:sync": "npx cap sync",
    "capacitor:build": "npm run build:static && npx cap sync",
    "build:static": "NEXT_OUTPUT=export next build",
    "ios": "npx cap open ios",
    "android": "npx cap open android",
    "ios:run": "npx cap run ios",
    "android:run": "npx cap run android"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.556.0",
    "next": "16.0.7",
    "openai": "^4.77.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^4.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
